    #navbarBTN{
        margin-left: 40px;
    }
    footer{
        
        background-color: black;
        color: white;
        height: 50px;
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 50px;
    }
    body{
        display: flex;
